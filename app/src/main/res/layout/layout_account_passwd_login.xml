<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <TextView
        android:id="@+id/tv_login_to_country_bypsswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/default_country"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/ts_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_login_to_country_bypsswd"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="7dp"
        android:padding="3dp"
        android:src="@mipmap/icon_right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/tv_login_to_country_bypsswd"
        app:layout_constraintLeft_toRightOf="@+id/tv_login_to_country_bypsswd"
        app:layout_constraintTop_toTopOf="@id/tv_login_to_country_bypsswd" />

    <com.tencent.iot.explorer.link.customview.check.VerifyEdit
        android:id="@+id/et_login_phone_or_email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:background="@color/white"
        android:hint="@string/mobile_or_email"
        android:textCursorDrawable="@drawable/edit_blue_cursor"
        android:inputType="textWebEmailAddress"
        android:textColorHint="@color/gray_cccccc"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/ts_16"
        app:layout_constraintBottom_toTopOf="@+id/line_login_phone_or_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_login_phone_or_email_clear" />

    <ImageView
        android:id="@+id/iv_login_phone_or_email_clear"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:padding="3dp"
        android:src="@mipmap/icon_clear"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/et_login_phone_or_email"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_login_phone_or_email" />

    <View
        android:id="@+id/line_login_phone_or_email"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray_dddddd"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tencent.iot.explorer.link.customview.check.VerifyEdit
        android:id="@+id/et_login_phone_or_email_passwd"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:background="@color/white"
        android:hint="@string/password"
        android:textCursorDrawable="@drawable/edit_blue_cursor"
        android:inputType="textPassword"
        android:textColorHint="@color/gray_cccccc"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/ts_16"
        app:layout_constraintBottom_toTopOf="@+id/line_login_phone_or_email_passwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_login_phone_or_email_passwd_clear" />

    <ImageView
        android:id="@+id/iv_login_phone_or_email_passwd_clear"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:padding="3dp"
        android:src="@mipmap/icon_clear"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/et_login_phone_or_email_passwd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_login_phone_or_email_passwd" />

    <View
        android:id="@+id/line_login_phone_or_email_passwd"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray_dddddd"
        app:layout_constraintTop_toTopOf="@+id/line_login_phone_or_email" />

    <Button
        android:id="@+id/btn_account_passwd_login"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_login_phone_or_email_passwd" />

    <TextView
        android:id="@+id/tv_use_verify_code_to_login"
        android:textSize="@dimen/ts_16"
        android:textColor="@color/blue_006EFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/verify_code_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_account_passwd_login" />

    <TextView
        android:id="@+id/tv_account_passwd_forget_passwd"
        android:textSize="@dimen/ts_16"
        android:textColor="@color/blue_006EFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/forgot_password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_account_passwd_login" />

</androidx.constraintlayout.widget.ConstraintLayout>