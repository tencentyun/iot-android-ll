<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/image_connected"/>

    <TextView
            android:id="@+id/tv_connect_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:text="@string/connect_success"
            android:textColor="@color/green_1aad19"
            android:textSize="@dimen/ts_20"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/tv_add_new_device"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_above="@+id/tv_back_to_home_page"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/btn_rad4_stoken_color_dddddd"
            android:gravity="center"
            android:text="@string/add_new_device"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_20" />

    <TextView
            android:id="@+id/tv_back_to_home_page"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_rad4_color_0052d9"
            android:gravity="center"
            android:text="@string/back_to_home_page"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_20" />

</RelativeLayout>