<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:ios="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="19:46"
            android:textSize="@dimen/ts_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="人形检测"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_14"
            app:layout_constraintLeft_toRightOf="@+id/tv_message_time"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_message_time" />

        <TextView
            android:id="@+id/tv_message_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="IPC1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_14"
            app:layout_constraintLeft_toLeftOf="@+id/tv_message_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_message_time" />


        <ImageView
            android:id="@+id/iv_icon_message"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@color/black_333333"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>